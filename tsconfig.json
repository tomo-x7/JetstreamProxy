{
	"compilerOptions": {
		"module": "esnext",
		"target": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",
		"incremental": true,
		"tsBuildInfoFile": "node_modules/.cache/.tsbuildinfo"
	},
	"include": ["src/**/*.ts", "build.ts"]
}
